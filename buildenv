#export ZOPEN_CLEAN=""         ## Clean up program to run (defaults to 'make')

meson_configure()
{
  MESON_FORCE_BACKTRACE=1 meson setup --prefix=${ZOPEN_INSTALL_DIR} --default-library=static ../build --reconfigure -Dc_std=gnu11 -Dxattr=false -Dselinux=disabled -Dbuildtype=release -Ddebug=false
}

meson_build()
{
  meson compile -C ../build
}

meson_check()
{
  meson test -C ../build
}

meson_install()
{
  meson install -C ../build
}

###
### Required user-supplied functions
###

zopen_check_results()
{
  dir="$1"
  pfx="$2"
  chk="$1/$2_check.log"

  passed=$(grep '^Ok:' $chk | awk '{print $2}')
  failed=$(grep '^Fail:' $chk | awk '{print $2}')
  timeout=$(grep '^Timeout:' $chk | awk '{print $2}')

  total_failed=$((failed + timeout))
  totalTests=$((total_failed + passed))

  echo "actualFailures:$total_failed"
  echo "totalTests:$totalTests"
  echo "expectedFailures:40"
  echo "expectedTotalTests:333"

}

zopen_get_version()
{
  # Modify to echo the version of your tool/library
  # Rather than hardcoding the version, obtain the version by running the tool/library
  ../build/gio/gapplication version
}


###
### Optional user-supplied functions for zopen-build
